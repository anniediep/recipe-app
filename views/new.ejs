<% include partials/header %>

<div class="container">
	<h1 style="text-align: center; margin: 25px 0 0 0;">Add a New Recipe</h1>
	<div class="row">
		<div style="width:30%; margin:25px auto;">
			<form action="/recipes" method="POST">
				<div class="form-group">
					<input type="text" class="form-control" name="name" placeholder="Recipe Name">
				</div>
				<div class="form-group">
					<input type="text" class="form-control" name="image" placeholder="Image URL">
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">Add Recipe</button>
				</div>
			</form>
			<a href="/recipes">Go Back</a>
		</div>
	</div>
</div>

<% include partials/footer %>