<% include partials/header %>

<nav class="navbar navbar-light bg-light navbar-toggle">
	<a class="navbar-brand" href="/">RecipeApp</a>

	<div class="navbar-collapse">
		<ul class="navbar-nav mr-auto">
			<li class="nav-item active"><a class="nav-link" href="#">Login</a></li>
			<li class="nav-item"><a class="nav-link" href="#">Sign Up</a></li>
			<li class="nav-item"><a class="nav-link" href="#">Logout</a></li>
		</ul>
	</div>

</nav>

<div class="container">

	<header class="jumbotron">
		<h1>Welcome to the Recipe App</h1>
		<p>Below are your curated recipes</p>
		<p>
			<a class="btn btn-lg btn-primary" href="/recipes/new">Add a New Recipe</a>
		</p>
	</header>

	<div class="row">
		<% recipes.forEach(function(recipe){ %>
			<div class="col-md-3 col-sm-6">
				<div class="img-thumbnail">
					<img class="img-fluid" src="<%= recipe.image %>">
					<div class="caption">
					 	<h5><%= recipe.name %></h5>
					 </div>
				</div>
			</div>
		<%}); %>
	</div>

</div>

<% include partials/footer %>